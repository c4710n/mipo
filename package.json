{
  "name": "mipo",
  "description": "A opinionated tool that aim to convert Markdown to PDF.",
  "version": "0.1.2",
  "license": "MIT",
  "repository": "c4710n/mipo",
  "bin": "bin/cli.js",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint 'index.js' 'bin/**/*.js'",
    "test": "bin/cli.js test/content.md test/build.pdf -l ./test/logo.png && open test/build.pdf"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "dependencies": {
    "fs-extra": "^8.1.0",
    "localtime": "^1.0.2",
    "relaxedjs": "^0.2.4",
    "yargs": "^15.2.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
